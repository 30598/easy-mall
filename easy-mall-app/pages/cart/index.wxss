/* pages/cart/index.wxss */
.cart-goods-item {
  background-color: white;
  display: flex;
  margin-top: 10rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 0 5rpx rgba(0, 0, 0, .35)
}
.cart-goods-item-checkbox {
  width: 10%;
  display: flex;
  align-items: center;
}
.cart-goods-item-checkbox checkbox .wx-checkbox-input {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: #F1F1F1;
}
.cart-goods-item-checkbox checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background-color: #09bb07;
}
.cart-goods-item-checkbox checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  font-weight: bold;
  font-size: 36rpx;
  color: white;
}
.cart-goods-item-img {
  text-align: center;
  width: 30%;
  display: inline-block;
}
.cart-goods-item-img image {
  margin: 0 auto;
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}
.cart-goods-item-info {
  margin-left: 20rpx;
  width: 60%;
  display: inline-block;
}
.cart-goods-item-info-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.cart-goods-item-info-stock {
  display: block;
  font-size: 22rpx;
  color: #868686;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.cart-goods-item-info-price {
  color: red;
}
.cart-goods-item-info-num {
  display: inline-block;
}