/* pages/goods/detail/index.wxss */
.gallery{
  height: 360rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
}

.info {
  background-color: #FFFFFF;
  padding: 20rpx;
}
.info-basic {
  display: flex;
}
.info-detail{
  width: 85%;
  display: flex;
  padding-left: 10rpx;
  padding-right: 30rpx;
  border-right: 1rpx solid #cccccc;
}
.info-btn{
  width: 15%;
  min-width: 100rpx;
  padding: 0 20rpx;
  background: none;
  border: none;
}
.info-btn::after{
  border: none;
}
.info-price{
  width: 30%;
}
.info-price-now{
  color: red;
  font-size: 60rpx;
}
.info-price-mark{
  color: grey;
  font-size: 30rpx;
  padding-left: 10rpx;
  text-decoration:line-through;
}
.info-name{
  width: 70%;
  margin: auto auto;
  font-size: 40rpx;
  text-align: right;
}
.info-btn image{
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx auto;
}
.info-btn view{
  text-align: center;
  display: block;
  color: #868686;
}
.info-desc {
  padding: 20rpx 10rpx 0rpx 20rpx;
}
.info-desc text{
  color: #868686;
}

.choose {
  background-color: #FFFFFF;
  margin-top: 10rpx;
  padding: 40rpx 20rpx 40rpx 30rpx;
  display: flex;
}
.choose-status {
  width: 20%;
  font-size: 36rpx;
  color: #868686;
  height: 40rpx;
  line-height: 40rpx;
}
.choose-data {
  width: 65%;
  height: 40rpx;
  line-height: 40rpx;
}
.choose-data text {
  font-size: 28rpx;
  color: #cccccc;
}
.choose-icon {
  width: 15%;
  height: 40rpx;
  line-height: 40rpx;
}
.choose-icon image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 auto;
  display: block;
}

.comment {
  background-color: #FFFFFF;
  margin-top: 10rpx;
  padding: 20rpx 30rpx 20rpx 30rpx;
}
.comment-head {
  display: flex;
  margin-bottom: 20rpx;
}
.comment-head view {
  width: 50%;
  font-size: 36rpx;
  line-height: 50rpx;
}
.comment-head navigator {
  width: 50%;
  font-size: 28rpx;
  text-align: right;
  line-height: 50rpx;
}
.comment-user {
  display: flex;
}
.comment-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  box-shadow: 0 0 5rpx rgba(155, 155, 155, .5);
}
.comment-name {
  font-size: 26rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}
.comment-desc {
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #333333;
  text-indent: 52rpx;
}
.comment-img {
  height: 150rpx;
  border-radius: 30rpx;
  white-space: nowrap;
  overflow: hidden;
}
.comment-img image {
  width: 150rpx;
  height: 100%;
  margin: 5rpx;
}

.detail {
  padding: 20rpx;
  background-color: #FFFFFF;
  margin-top: 10rpx;
}
.detail-title {
  font-size: 32rpx;
  text-align: center;
  border-bottom: 1rpx solid #cccccc;
  margin-bottom: 20rpx;
  padding: 20rpx 0rpx;
}

.question {
  background: #FFFFFF;
  margin-top: 10rpx;
  padding: 20rpx;
  margin-bottom: 120rpx;
}
.question-title {
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 30rpx;
}
.question-title text {
  margin: 0rpx 30rpx;
}
.question-item {
  padding: 5rpx 0;
}
.question-subject {
  font-weight: bold;
}
.question-answer {
  padding: 10rpx 0;
  font-size: 26rpx;
  text-indent: 52rpx;
}

.action {
  display: flex;
  background-color: #FFFFFF;
  margin-top: 10rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  box-shadow: -5rpx 0 5rpx rgba(0, 0, 0, .35);
}
.action-l {
  width: 20%;
  min-width: 100rpx;
  padding: 10rpx 20rpx;
  background: none;
  border: none;
  line-height: 1.2;
  height: 120rpx;
}
.action-r {
  width: 30%;
  margin: 30rpx;
  background: #09BB07;
  color: #FFFFFF;
  font-size: 26rpx;
  border-radius: 30rpx;
  line-height: 60rpx;
  height: 60rpx;
}
.action-l:after, .action-l:after{
  border: none;
}
.action-l-img {  
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
}
.action-l image {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.action-l-text {
  display: inline-block;
}